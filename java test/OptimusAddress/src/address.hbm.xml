<?xml version="1.0" encoding = "UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping>
	<class table = "Authentication" name = "optimus.addressbook.Authentication">
		<id name = "ID">
		<generator class = "identity"> </generator>
		</id>
		<property name = "email" />
		<property name = "password" />
		<property name = "role" />
		
	</class>
	
	<class table = "Address" name = "optimus.addressbook.Address">
		<id name = "ID">
		<generator class = "identity"> </generator>
		</id>
		<property name = "fname" />
		<property name = "lname" />
		<property name = "phoneNo" />
		<property name = "address" />
		<property name = "email" />
	</class>
</hibernate-mapping>